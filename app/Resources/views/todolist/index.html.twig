{% extends 'base.html.twig' %}

{% block body %}
    <div class="row d-flex justify-content-around">

        <h1 class="col-lg-12 text-center">TodoList</h1>

        <div class="col-lg-5 d-flex justify-content-center">
            <ul class="col-lg-12 list-group list-group-flush">
                {% for task in tasks %}
                    <li class="list-group-item">
                        {{ task.name }}
                        <span class="secondary-content">
                            <a href="{{ path('edittask', {'id' : task.id}) }}" class="waves-effect waves-light btn-small">
                                Editer
                            </a>
                            <a href="{{ path('deletetask', {'id' : task.id}) }}" class="waves-effect waves-light btn-small red">
                                Supprimer
                            </a>
                        </span>
                    </li>
                {% endfor %}
            </ul>
        </div>

        <div class="col-lg-3 d-flex justify-content-around">
            <form action="{{ path('addtask') }}" method="post">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input name="name" type="text" class="form-control" id="name" placeholder="Name">
                </div>
                <div class="form-group">
                    <label for="priority">Priority</label>
                    <input name="priority" type="number" class="form-control" id="priority" placeholder="Priority">
                </div>
                <div class="form-group">
                    <label for="user">User</label>
                    <select name="userid" class="form-control" id="user">
                        <option disabled selected value></option>
                        {% for user in users %}
                            <option value="{{ user.id }}">{{ user.pseudo }}</option>
                        {% endfor %}
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Add task</button>
            </form>

            <form action="{{ path('adduser') }}" method="post">
                <div class="form-group">
                    <label for="pseudo">Pseudo</label>
                    <input name="pseudo" type="text" class="form-control" id="pseudo" placeholder="Pseudo">
                </div>
                <button type="submit" class="btn btn-primary">Add user</button>
            </form>
        </div>

    </div>
{% endblock %}