{% extends 'base.html.twig' %}

{% block body %}
    <div class="row d-flex justify-content-around">

        <h1 class="col-lg-12 text-center">TodoList</h1>

        <div class="col-lg-12 d-flex justify-content-start">
            <a href="{{ path('todolist', {'filter' : 'done'}) }}" class="btn btn-info m-2">
                Filter done
            </a>

            <a href="{{ path('todolist', {'filter' : 'undone'}) }}" class="btn btn-info m-2">
                Filter undone
            </a>

            <a href="{{ path('todolist', {'filter' : 'all'}) }}" class="btn btn-info m-2">
                Filter all
            </a>
            {% if filter is not null %}
                Actually filter by {{ filter }}
            {% endif %}
        </div>

        <div class="col-lg-8 d-flex justify-content-center">

            <ul class="col-lg-12 list-group list-group-flush">
                {% for task in tasks %}
                    <li class="list-group-item">
                        <div class="row">
                            <div class="col-lg-5">
                                <form id="editTask" action="{{ path('edittask', {'id' : task.id}) }}" method="post">
                                    <input value="{{ task.name }}" name="name" type="text"
                                           id="name" placeholder="Name" required="required">

                                    <input {% if task.priority is not null %}value="{{ task.priority }}"{% endif %}
                                           name="priority" type="number" id="priority" placeholder="Priority">

                                    <label for="done">DONE</label>
                                    <input value="done" name="done" type="checkbox" id="done" {% if task.done %}checked{% endif %}>
                                </form>
                            </div>
                            <div class="col-lg-2">
                                <form id="assignUser" action="{{ path('assignUser', {'taskid' : task.id}) }}" method="post">
                                    <select name="userid" id="user">
                                        {% if task.userid is null %}
                                            <option value="" disabled selected>Pick a user</option>
                                        {% endif %}
                                        {% for user in users %}
                                            {% if task.userId == user.id %}
                                                <option selected value="{{ user.id }}">{{ user.pseudo }}</option>
                                            {% else %}
                                                <option value="{{ user.id }}">{{ user.pseudo }}</option>
                                            {% endif %}
                                        {% endfor %}
                                    </select>
                                </form>
                            </div>
                            <div class="col-lg-5">
                                <button form="assignUser" type="submit" class="btn btn-success">Assign user</button>
                                <button form="editTask" type="submit" class="btn btn-primary">Edit Task</button>
                                <a href="{{ path('deletetask', {'id' : task.id}) }}" class="btn btn-danger">
                                    Delete Task
                                </a>
                            </div>
                        </div>



                        {#<span class="secondary-content float-right">#}
                            {##}
                        {#</span>#}
                    </li>
                {% endfor %}
            </ul>
        </div>

        <div class="col-lg-3 d-flex justify-content-around">
            <form action="{{ path('addtask') }}" method="post">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input name="name" type="text" class="form-control" id="name" placeholder="Name" required="required">
                </div>
                <div class="form-group">
                    <label for="priority">Priority</label>
                    <input name="priority" type="number" class="form-control" id="priority" placeholder="Priority">
                </div>
                <div class="form-group">
                    <label for="user">User</label>
                    <select name="userid" class="form-control" id="user">
                        <option disabled selected value></option>
                        {% for user in users %}
                            <option value="{{ user.id }}">{{ user.pseudo }}</option>
                        {% endfor %}
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Add task</button>
            </form>

            <form action="{{ path('adduser') }}" method="post">
                <div class="form-group">
                    <label for="pseudo">Pseudo</label>
                    <input name="pseudo" type="text" class="form-control" id="pseudo" placeholder="Pseudo" required="required">
                </div>
                <button type="submit" class="btn btn-primary">Add user</button>
            </form>
        </div>

    </div>
{% endblock %}