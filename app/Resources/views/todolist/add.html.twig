{% extends 'todolist/index.html.twig' %}

{% block body %}
    <div class="row">
        <form class="col s12" action="{{ path('addtask') }}" method="get">
            <div class="row">
                <div class="input-field col s6">
                    <input name="name" id="name" type="text" class="validate">
                    <label for="name">Name</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6">
                    <input name="priority" id="priority" type="text" class="validate">
                    <label for="priority">Priority</label>
                </div>
            </div>
            <button class="btn waves-effect waves-light" type="submit" name="action">
                Submit
            </button>
        </form>
    </div>
{% endblock %}