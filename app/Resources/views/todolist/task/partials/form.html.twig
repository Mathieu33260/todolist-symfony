{{ form_start(taskForm, {'action': action, 'method': 'POST',
    'attr': {'class': 'col-lg-6'}}) }}
<div class="form-group">
    {{ form_label(taskForm.name) }}
    {{ form_widget(taskForm.name, { 'attr': {'class': 'form-control'}}) }}
</div>
<div class="form-group">
    {{ form_label(taskForm.priority) }}
    {{ form_widget(taskForm.priority, { 'attr': {'class': 'form-control'}}) }}
</div>
<div class="form-group">
    {{ form_label(taskForm.user) }}
    {{ form_widget(taskForm.user, { 'attr': {'class': 'form-control'}}) }}
</div>
<div class="form-group">
    {{ form_label(taskForm.date) }}
    {{ form_widget(taskForm.date, { 'attr': {'class': 'form-control'}}) }}
</div>
{% if type == 'edit' %}
<div class="form-group">
    {{ form_label(taskForm.done) }}
    {{ form_widget(taskForm.done, { 'attr': {'class': 'form-control'}}) }}
</div>
{% endif %}
<button class="btn btn-primary" type="submit">Envoyer</button>
{{ form_widget(taskForm._token) }}
{{ form_end(taskForm, {'render_rest': false}) }}